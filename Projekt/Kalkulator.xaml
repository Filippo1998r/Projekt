                            </ControlTemplate>
                        </ListBox.Template>-->

                    <!--</ListBox>
                        </Grid>
                    </ScrollViewer>-->


                </Canvas>
            </Popup>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>